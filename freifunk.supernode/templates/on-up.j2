{% set current_node = ff_supernodes[inventory_hostname] %}
#!/bin/sh

/sbin/ip link set dev {{ fastd_interface }} address {{ "02:ff:0f:a5:7d:%02d" | format(current_node.id|int) }}
/sbin/ip link set dev {{ fastd_interface }} up

/usr/sbin/batctl if add {{ fastd_interface }}
/usr/sbin/batctl it 5000
/usr/sbin/batctl gw_mode server 100MBit/100MBit

/sbin/ip rule add from {{ ff_network.ipv4 }} table freifunk
/sbin/ip route add {{ ff_network.ipv4 }} dev bat0 table freifunk
/sbin/ip route flush cache
