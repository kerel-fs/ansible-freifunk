{% set current_node = ff_supernodes[inventory_hostname] %}
interface bat0 {
  AdvSendAdvert on;
  AdvHomeAgentFlag off;
  MinRtrAdvInterval 10;
  MaxRtrAdvInterval 30;
  AdvOtherConfigFlag on;
  AdvSourceLLAddress off;
  AdvLinkMTU 1350; #1442 - fastd - batman-adv - See wiki for details

  prefix {{ current_node.ipv6 }} {
    AdvOnLink on;
    AdvAutonomous on;
    AdvRouterAddr on;
  };
  prefix {{ ff_network.ipv6_ula }} {
    AdvOnLink off;
    AdvAutonomous off;
    AdvRouterAddr on;
  };
};
